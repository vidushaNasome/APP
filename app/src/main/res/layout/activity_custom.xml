<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context=".custom">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        app:srcCompat="@drawable/murray_mancini_dried_tomato_pie" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkChicken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extra Chicken"
            android:textSize="10dp" />
        <CheckBox
            android:id="@+id/checkExtraCheese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extra Cheese"
            android:textSize="10dp"/>
        <CheckBox
            android:id="@+id/checkSausage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sausage"
            android:textSize="10dp"/>
    </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp">
    <CheckBox
        android:id="@+id/checSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Small"
        android:textSize="10dp"/>

        <CheckBox
            android:id="@+id/checkMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textSize="10dp"/>

        <CheckBox
            android:id="@+id/checkLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Large"
            android:textSize="10dp"/>
   </LinearLayout>


    <TextView
        android:id="@+id/pizza1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#E91E63"
        android:textSize="30dp"
        tools:text="pizzaa" />

    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CC0C1D"
        android:textSize="25dp"
        tools:text="priceeee" />

    <Button
        android:id="@+id/addtocartbtn"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/background_dark"
        android:textSize="15dp"
        android:text="Add to Cart"/>


</LinearLayout>
