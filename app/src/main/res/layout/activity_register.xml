<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAct"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/w1"
    android:backgroundTintMode="src_over">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/register"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/unid_Reg"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/username"

        android:layout_marginTop="30dp"
        android:hint="@string/username"
        android:textColor="#FB8C00"
        android:textColorHint="#00897B" />

    <EditText
        android:id="@+id/email_Reg"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColorHint="#00897B" />

    <EditText
        android:id="@+id/pw_Reg"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="@string/password"
        android:drawableLeft="@drawable/password"
        android:textColorHint="#00897B" />

    <EditText
        android:id="@+id/cpw_Reg"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="@string/cpassword"
        android:drawableLeft="@drawable/cpw"
        android:textColorHint="#00897B" />

    <Button
        android:id="@+id/reg_Reg"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/Register" />



</LinearLayout>