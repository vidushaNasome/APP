<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_Oshani">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="398dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@drawable/shoppingcart"
        android:gravity="center"
        android:text="Your Basket"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nameid2"
        android:layout_width="174dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="21dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/priceid2"
        android:layout_width="169dp"
        android:layout_height="39dp"
        android:layout_below="@+id/nameid2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="225dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/btnPay"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="361dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="108dp"
        android:layout_marginBottom="51dp"
        android:background="@drawable/custom_button"
        android:drawableLeft="@drawable/leftb"
        android:text="Continue Shopping"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.713" />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="225dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="359dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:layout_marginBottom="41dp"
        android:background="@drawable/custom_button"
        android:text="Checkout"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnContinue"
        app:layout_constraintVertical_bias="0.347" />

    <TextView
        android:id="@+id/txtIName"
        android:layout_width="169dp"
        android:layout_height="39dp"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="26dp"
        android:text="Item Name"
        android:textAllCaps="false"
        android:layout_toLeftOf="@+id/nameid2"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="169dp"
        android:layout_height="39dp"
        android:layout_below="@+id/txtIName"
        android:layout_marginTop="26dp"
        android:text="Price"
        android:textAllCaps="false"
        android:layout_toLeftOf="@+id/priceid2"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnAddQun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceid2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:onClick="showDialog"
        android:text="Add Quantity"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/txtdisplayAll"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@+id/btnAddQun"
        android:background="@color/colorAccent" />


</RelativeLayout>